@page "/profile"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using FlavourFlow.Domains
@using FlavourFlow.Data
@using System.Security.Claims

@rendermode InteractiveServer

@attribute [Authorize]
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<FlavourFlowUser> UserManager
@inject NavigationManager Navigation

<PageTitle>My Profile - FlavorFlow</PageTitle>

<div class="profile-wrapper">
    <nav class="nav-bar">
        <div class="logo">
            <span style="font-size: 1.5rem;">🍜</span> FlavorFlow
        </div>
        <div class="nav-links">
            <a href="/">Explore</a>
            <a href="#">Saved</a>
            <a href="profile" class="active">Profile</a>
        </div>
    </nav>

    <div class="container">
        <section class="profile-header">
            <div class="user-card">
                <div class="user-avatar" style="background-image: url('@UserProfile.AvatarUrl');"></div>

                @if (isLoading)
                {
                    <p>Loading...</p>
                }
                else
                {
                    <h2>@UserProfile.Name</h2>
                    <p>@UserProfile.Email</p>
                }

                <button class="btn-edit">Edit profile</button>

                <button class="btn-edit" style="background: #ff4d4d; color: white; border: none; margin-top: 10px;"
                        @onclick="() => showLogoutConfirmation = true">
                    Log Out
                </button>
            </div>

            <div class="stats-container">
                <div class="stat-card saved">
                    <div class="stat-label">Saved Recipes</div>
                    <div class="stat-number">@UserProfile.SavedCount</div>
                </div>
                <div class="stat-card tried">
                    <div class="stat-label">Recipes Tried</div>
                    <div class="stat-number">@UserProfile.TriedCount</div>
                </div>
            </div>
        </section>

        <div class="favorites-section">
            <div class="section-title">My favorites</div>
            <div class="recipe-grid">
                @foreach (var recipe in FavoriteRecipes)
                {
                    <div class="recipe-card">
                        <div class="card-image" style="background-color: @recipe.BgColor;">
                            <span class="time-tag">@recipe.Time min</span>
                            <span style="font-size: 2rem; color: @recipe.IconColor;">@recipe.IconClass</span>
                        </div>
                        <div class="card-meta">
                            <div class="cuisine-type">@recipe.Cuisine</div>
                            <h3 class="card-title">@recipe.Title</h3>
                            <div class="rating">
                                <span>⭐</span> @recipe.Rating
                            </div>
                            <span class="tag-pill">@recipe.Tag</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@if (showLogoutConfirmation)
{
    <div class="modal-backdrop">
        <div class="modal-content">
            <h3>Log Out?</h3>
            <p>Are you sure you want to leave FlavorFlow?</p>

            <div class="modal-actions">
                <button class="btn-edit" @onclick="() => showLogoutConfirmation = false">Cancel</button>

                <form action="Account/Logout" method="post">
                    <AntiforgeryToken />

                    <input type="hidden" name="ReturnUrl" value="/" />
                    <button type="submit" class="btn-edit" style="background: #ff4d4d; color: white; border: none;">Yes, Log Out</button>
                </form>
            </div>
        </div>
    </div>
}

