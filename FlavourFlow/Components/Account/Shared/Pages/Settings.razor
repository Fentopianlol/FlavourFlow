@page "/Account/Manage"
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using FlavourFlow.Domains
@using FlavourFlow.Data

@inject UserManager<FlavourFlowUser> UserManager
@inject SignInManager<FlavourFlowUser> SignInManager
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<PageTitle>Settings - FlavourFlow</PageTitle>

<div class="settings-container">
    <h1>⚙️ Account Settings</h1>
    <p class="text-muted">Manage your profile and security preferences.</p>

    @if (!string.IsNullOrEmpty(statusMessage))
    {
        <div class="alert @(isError ? "alert-danger" : "alert-success")">
            @statusMessage
        </div>
    }

    <div class="settings-grid">
        <div class="settings-card">
            <h3>👤 Personal Details</h3>
            <EditForm Model="ProfileInput" OnValidSubmit="UpdateProfileAsync" FormName="profile">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label>First Name</label>
                    <InputText @bind-Value="ProfileInput.FirstName" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Last Name</label>
                    <InputText @bind-Value="ProfileInput.LastName" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Email Address</label>
                    <InputText @bind-Value="ProfileInput.Email" class="form-control" placeholder="name@example.com" />
                </div>

                <button type="submit" class="btn-save">Save Profile</button>
            </EditForm>
        </div>

        <div class="settings-card">
            <h3>🔒 Security</h3>
            <EditForm Model="PasswordInput" OnValidSubmit="ChangePasswordAsync" FormName="password">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-group">
                    <label>Current Password</label>
                    <InputText type="password" @bind-Value="PasswordInput.OldPassword" class="form-control" />
                </div>

                <div class="form-group">
                    <label>New Password</label>
                    <InputText type="password" @bind-Value="PasswordInput.NewPassword" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Confirm New Password</label>
                    <InputText type="password" @bind-Value="PasswordInput.ConfirmPassword" class="form-control" />
                </div>

                <button type="submit" class="btn-save btn-security">Change Password</button>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private FlavourFlowUser? user;
    private string? statusMessage;
    private bool isError = false;

    // FIX: Using SupplyParameterFromForm to bind data correctly during POST requests
    [SupplyParameterFromForm(FormName = "profile")]
    private ProfileModel ProfileInput { get; set; } = new();

    [SupplyParameterFromForm(FormName = "password")]
    private PasswordModel PasswordInput { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        user = await UserManager.GetUserAsync(authState.User);

        if (user == null)
        {
            Navigation.NavigateTo("Account/Login");
            return;
        }

        // Only load data from DB if the form is empty (first load), otherwise keep user input
        if (string.IsNullOrEmpty(ProfileInput.FirstName))
        {
            ProfileInput = new ProfileModel
            {
                FirstName = user.FirstName,
                LastName = user.LastName,
                Email = user.Email ?? ""
            };
        }
    }

    private async Task UpdateProfileAsync()
    {
        if (user == null) return;

        // 1. Update basic info
        user.FirstName = ProfileInput.FirstName;
        user.LastName = ProfileInput.LastName;

        // 2. Handle Email Change (Updates Username as well)
        if (user.Email != ProfileInput.Email)
        {
            var emailResult = await UserManager.SetEmailAsync(user, ProfileInput.Email);
            var userResult = await UserManager.SetUserNameAsync(user, ProfileInput.Email);

            if (!emailResult.Succeeded || !userResult.Succeeded)
            {
                statusMessage = "Error updating email.";
                isError = true;
                return;
            }
        }

        // 3. Save updates
        var result = await UserManager.UpdateAsync(user);

        if (result.Succeeded)
        {
            statusMessage = "✅ Profile updated!";
            isError = false;

            // Refresh cookie so the new name/email is recognized immediately
            await SignInManager.RefreshSignInAsync(user);

            // Redirect to Home
            Navigation.NavigateTo("/", forceLoad: true);
        }
        else
        {
            statusMessage = "Error updating profile.";
            isError = true;
        }
    }

    private async Task ChangePasswordAsync()
    {
        if (user == null) return;

        var result = await UserManager.ChangePasswordAsync(user, PasswordInput.OldPassword, PasswordInput.NewPassword);

        if (result.Succeeded)
        {
            statusMessage = "✅ Password changed successfully!";
            isError = false;
            PasswordInput = new(); // Clear form
            await SignInManager.RefreshSignInAsync(user);

            // Redirect to Home
            Navigation.NavigateTo("/", forceLoad: true);
        }
        else
        {
            statusMessage = string.Join(", ", result.Errors.Select(e => e.Description));
            isError = true;
        }
    }

    public class ProfileModel
    {
        [Required] public string FirstName { get; set; } = "";
        [Required] public string LastName { get; set; } = "";
        [Required][EmailAddress] public string Email { get; set; } = "";
    }

    public class PasswordModel
    {
        [Required]
        [DataType(DataType.Password)]
        public string OldPassword { get; set; } = "";

        [Required]
        [DataType(DataType.Password)]
        [StringLength(100, MinimumLength = 6, ErrorMessage = "Password must be at least 6 characters.")]
        public string NewPassword { get; set; } = "";

        [DataType(DataType.Password)]
        [Compare("NewPassword", ErrorMessage = "The new password and confirmation password do not match.")]
        public string ConfirmPassword { get; set; } = "";
    }
}

