@page "/Account/ResetPasswordConfirmation"
<PageTitle>Reset password confirmation</PageTitle>

<div class="container-fluid d-flex align-items-center justify-content-center" style="min-height: 80vh; background-color: #f9f9f9;">
    <div class="col-md-5">
        <div class="card border-0 shadow-lg p-4" style="border-radius: 30px;">
            <div class="card-body text-center">
                <div class="mb-4">
                    <span class="fs-1">🍜</span>
                    <h3 class="fw-bold mt-2" style="color: #333;">Password Reset</h3>
                </div>

                <div class="alert alert-success">
                    Your password has been reset successfully!
                </div>

                <p>Please click below to log in.</p>

                <a href="login" class="btn btn-lg rounded-pill text-white fw-bold shadow-sm btn-flavor w-100" style="height: 55px;">
                    Log In
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-flavor {
        background-color: #ff6b35;
        border-color: #ff6b35;
        color: white;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-flavor:hover {
            background-color: #ff5520;
            border-color: #ff5520;
        }
</style>