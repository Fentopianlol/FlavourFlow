    @page "/Account/ForgotPassword"

    @using System.ComponentModel.DataAnnotations
    @using System.Text
    @using System.Text.Encodings.Web
    @using Microsoft.AspNetCore.Identity
    @using Microsoft.AspNetCore.WebUtilities
    @using FlavourFlow.Data
    @using FlavourFlow.Domains
    @using FlavourFlow.Components

    @inject UserManager<FlavourFlowUser> UserManager
    @inject IEmailSender<FlavourFlowUser> EmailSender
    @inject NavigationManager NavigationManager
    @inject IdentityRedirectManager RedirectManager

    <PageTitle>Forgot Password - FlavorFlow</PageTitle>

    <div class="container-fluid d-flex align-items-center justify-content-center" style="min-height: 80vh; background-color: #f9f9f9;">
        <div class="col-md-5">
            <div class="card border-0 shadow-lg p-4" style="border-radius: 30px;">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <span class="fs-1">🍜</span>
                        <h3 class="fw-bold mt-2" style="color: #333;">Forgot Password?</h3>
                        <p class="text-muted">Enter your email and we'll send you a reset link.</p>
                    </div>

                    <EditForm Model="Input" FormName="forgot-password" OnValidSubmit="OnValidSubmitAsync" method="post">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger" role="alert" />

                        <div class="form-floating mb-3 text-start">
                            <InputText @bind-Value="Input.Email" class="form-control rounded-pill bg-light border-0 px-4" placeholder="name@example.com" />
                            <label class="px-4">Email</label>
                            <ValidationMessage For="() => Input.Email" class="text-danger small ms-3" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-lg rounded-pill text-white fw-bold shadow-sm btn-flavor" style="height: 55px;">
                                Reset Password
                            </button>
                        </div>
                    </EditForm>

                    <div class="mt-4">
                        <a href="login" class="text-muted text-decoration-none small">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .btn-flavor {
            background-color: #ff6b35;
            border-color: #ff6b35;
            color: white;
            transition: all 0.3s;
        }

            .btn-flavor:hover {
                background-color: #ff5520;
                border-color: #ff5520;
            }
    </style>

    @code {
        [SupplyParameterFromForm]
        private InputModel Input { get; set; } = new();

        private async Task OnValidSubmitAsync()
        {
            var user = await UserManager.FindByEmailAsync(Input.Email);
            if (user is null || !(await UserManager.IsEmailConfirmedAsync(user)))
            {
                RedirectManager.RedirectTo("Account/ForgotPasswordConfirmation");
            }

            var code = await UserManager.GeneratePasswordResetTokenAsync(user);
            code = WebEncoders.Base64UrlEncode(Encoding.UTF8.GetBytes(code));
            var callbackUrl = NavigationManager.GetUriWithQueryParameters(
                NavigationManager.ToAbsoluteUri("Account/ResetPassword").AbsoluteUri,
                new Dictionary<string, object?> { ["code"] = code });

            await EmailSender.SendPasswordResetLinkAsync(user, Input.Email, HtmlEncoder.Default.Encode(callbackUrl));

            RedirectManager.RedirectTo("Account/ForgotPasswordConfirmation");
        }

        private sealed class InputModel
        {
            [Required]
            [EmailAddress]
            public string Email { get; set; } = "";
        }
    }
