@page "/recipe/{Id:int}"
@using FlavourFlow.Domains
@using FlavourFlow.Services
@using FlavourFlow.Data
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity

@rendermode RenderMode.InteractiveServer

@inject RecipeService RecipeService
@inject UserService UserService
@inject AuthenticationStateProvider AuthStateProvider
@inject UserManager<FlavourFlowUser> UserManager
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>@(recipe?.Title ?? "Loading...") - FlavorFlow</PageTitle>

@if (recipe == null)
{
    <div class="loading-state">
        <p>🍳 Heating up the pan...</p>
    </div>
}
else
{
    <div class="recipe-container">

        <div class="recipe-header">
            <span class="category-badge">@recipe.Category?.Name</span>
            <h1>@recipe.Title</h1>

            <div class="meta-row">
                <a href="profile/@recipe.UserId" class="chef-link">
                    👤 @(recipe.User?.FirstName ?? "Unknown Chef")
                </a>
                <span>⏱ @recipe.CookTime min</span>
                <span>📊 @recipe.Difficulty</span>
                <span>⭐ @(recipe.AverageRating.ToString("0.0")) (@recipe.Reviews.Count reviews)</span>
            </div>

            @if (isAdmin || isOwner)
            {
                <div class="admin-controls">
                    <button class="btn-delete" @onclick="DeleteRecipe">🗑️ Delete Recipe @(isAdmin ? "(Admin)" : "")</button>
                </div>
            }

            <div class="action-row">
                <button class="btn-save @(isSaved ? "saved" : "")" @onclick="ToggleSave">
                    @(isSaved ? "❤️ Saved" : "🤍 Save Recipe")
                </button>
            </div>
        </div>

        <div class="recipe-hero-img" style="background-image: url('@(string.IsNullOrEmpty(recipe.ImageURL) ? "/images/default.jpg" : recipe.ImageURL)');"></div>

        <div class="recipe-content-grid">
            <div class="ingredients-panel">
                <h3>🛒 Ingredients</h3>
                <ul>
                    @foreach (var ing in recipe.Ingredients)
                    {
                        <li><strong>@ing.Quantity</strong> @ing.Name</li>
                    }
                </ul>
            </div>

            <div class="instructions-panel">
                <h3>🔥 Instructions</h3>
                <div class="steps-list">
                    @foreach (var step in recipe.Instructions.OrderBy(s => s.StepNumber))
                    {
                        <div class="step-item">
                            <div class="step-num">@step.StepNumber</div>
                            <div class="step-text">@step.StepDescription</div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="reviews-section">
            <h3>Reviews & Ratings</h3>

            @if (canReview)
            {
                <div class="add-review-box">
                    <h4>How was it?</h4>
                    <div class="star-rating">
                        @for (int i = 1; i <= 5; i++)
                        {
                            var star = i;
                            <span class="@(newRating >= star ? "filled" : "")" @onclick="() => newRating = star">★</span>
                        }
                    </div>
                    <textarea class="form-control" @bind="newComment" placeholder="Share your thoughts..."></textarea>
                    <button class="btn-submit-review" @onclick="SubmitReview">Post Review</button>
                </div>
            }

            <div class="reviews-list">
                @if (recipe.Reviews.Any())
                {
                    @foreach (var review in recipe.Reviews.OrderByDescending(r => r.CreatedAt))
                    {
                        <div class="review-card">
                            <div class="review-header">
                                <div class="reviewer-info">
                                    <a href="profile/@review.UserId" class="reviewer-name">
                                        <strong>@(review.User?.FirstName ?? "Foodie")</strong>
                                    </a>
                                    <span class="stars">@string.Concat(Enumerable.Repeat("★", review.Rating))</span>
                                </div>

                                @if (isAdmin)
                                {
                                    <button class="btn-delete-review" @onclick="() => DeleteReview(review.ReviewId)">
                                        🗑️
                                    </button>
                                }
                            </div>
                            <p>@review.Comment</p>
                            <small class="text-muted">@review.CreatedAt.ToShortDateString()</small>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No reviews yet. Be the first!</p>
                }
            </div>
        </div>

    </div>
}

@code {
    [Parameter] public int Id { get; set; }
    private Recipe? recipe;
    private bool isSaved = false;
    private bool isAdmin = false;
    private bool isOwner = false;
    private string? currentUserId;

    private bool canReview = false;
    private int newRating = 5;
    private string newComment = "";

    protected override async Task OnInitializedAsync()
    {
        recipe = await RecipeService.GetRecipeByIdAsync(Id);

        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            var appUser = await UserManager.GetUserAsync(user);
            if (appUser != null)
            {
                currentUserId = appUser.Id;
                isSaved = await UserService.IsRecipeSavedAsync(currentUserId, Id);

                bool hasReviewed = await RecipeService.HasUserReviewedAsync(Id, currentUserId);
                canReview = !hasReviewed;

                isAdmin = await UserManager.IsInRoleAsync(appUser, "Admin");
                isOwner = recipe?.UserId == currentUserId;
            }
        }
    }

    private async Task ToggleSave()
    {
        if (currentUserId == null) { Navigation.NavigateTo("Account/Login"); return; }
        await UserService.ToggleSaveRecipeAsync(currentUserId, Id);
        isSaved = !isSaved;
    }

    private async Task SubmitReview()
    {
        if (currentUserId == null || recipe == null) return;
        await RecipeService.AddReviewAsync(recipe.RecipeId, currentUserId, newRating, newComment);
        recipe = await RecipeService.GetRecipeByIdAsync(Id);
        canReview = false;
    }

    private async Task DeleteRecipe()
    {
        if (recipe == null) return;
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "⚠️ Warning: Delete this recipe permanently?");
        if (confirmed)
        {
            await RecipeService.DeleteRecipeAsync(recipe.RecipeId);
            Navigation.NavigateTo("/", forceLoad: true);
        }
    }

    // NEW: Review Deletion Logic
    private async Task DeleteReview(int reviewId)
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Delete this review?");
        if (confirmed)
        {
            await RecipeService.DeleteReviewAsync(reviewId);
            // Refresh data to remove the review from the UI
            recipe = await RecipeService.GetRecipeByIdAsync(Id);

            // Allow user to review again if they deleted their own review
            if (currentUserId != null)
            {
                canReview = !await RecipeService.HasUserReviewedAsync(Id, currentUserId);
            }
        }
    }
}

