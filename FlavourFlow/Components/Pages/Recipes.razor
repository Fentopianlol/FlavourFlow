@page "/recipe/{Id:int}"
@rendermode RenderMode.InteractiveServer
@using FlavourFlow.Services
@using FlavourFlow.Domains
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using FlavourFlow.Components.Account

@inject RecipeService RecipeService
@inject UserService UserService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@inject UserManager<FlavourFlowUser> UserManager

<PageTitle>@(recipe?.Title ?? "Loading...") - FlavorFlow</PageTitle>

<div class="page-wrapper">
    @if (recipe == null)
    {
        <div class="loading-state">Loading recipe...</div>
    }
    else
    {
        <button class="back-btn" @onclick="GoBack">← Back</button>

        <div class="hero-card">
            <button class="btn-save @(isSaved ? "saved" : "")" @onclick="ToggleSave">
                @(isSaved ? "❤️ Saved" : "🤍 Save")
            </button>
            <img src="@(string.IsNullOrEmpty(recipe.ImageURL) ? "https://images.unsplash.com/photo-1495521821757-a1efb6729352?auto=format&fit=crop&w=800&q=80" : recipe.ImageURL)"
                 class="hero-image" alt="@recipe.Title" />

            <div class="hero-content">
                <h1>@recipe.Title</h1>
                <div class="chef-badge">
                    <span class="chef-avatar">👨‍🍳</span>
                    <span class="chef-name">
                        Created by <a href="profile/@recipe.UserId" class="chef-link">
                            <strong>@(recipe.User?.FirstName ?? "FlavorFlow Chef")</strong>
                        </a>
                    </span>
                </div>
                <div class="rating-display">
                    <span class="stars">⭐ @recipe.AverageRating</span>
                    <span class="count">(@recipe.ReviewCount reviews)</span>
                </div>

                <p class="description">@recipe.Description</p>
            </div>
        </div>

        <div class="content-grid">
            <aside class="ingredients-panel">
                <h3>Ingredients</h3>
                @foreach (var item in recipe.Ingredients)
                {
                    <div class="ingredient-item">
                        <input type="checkbox" id="ing-@item.IngredientId">
                        <label for="ing-@item.IngredientId"><strong>@item.Quantity</strong> @item.Name</label>
                    </div>
                }
            </aside>

            <div class="main-column">
                <div class="steps-container">
                    <h3>Instructions</h3>
                    @foreach (var step in recipe.Instructions.OrderBy(i => i.StepNumber))
                    {
                        <div class="step-card">
                            <span class="step-number">STEP @step.StepNumber</span>
                            <p>@step.StepDescription</p>
                        </div>
                    }
                </div>

                <div class="reviews-section">
                    <h3>Reviews & Ratings</h3>

                    @if (user != null)
                    {
                        @if (!userHasReviewed)
                        {
                            <div class="review-form">
                                <h4>Leave a Review</h4>
                                <div class="star-rating-input">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        var starValue = i;
                                        <span class="star-btn @(newRating >= starValue ? "filled" : "")"
                                              @onclick="() => newRating = starValue">★</span>
                                    }
                                </div>
                                <textarea @bind="newComment" placeholder="How was it? Share your thoughts..." rows="3"></textarea>
                                <button class="btn-submit" @onclick="SubmitReview" disabled="@isSubmitting">
                                    @(isSubmitting ? "Posting..." : "Post Review")
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-success" style="margin-bottom: 20px; padding: 15px; background-color: #d4edda; color: #155724; border-radius: 10px;">
                                <strong>Thanks!</strong> You have already reviewed this recipe.
                            </div>
                        }
                    }
                    else
                    {
                        <div class="login-prompt">
                            <a href="Account/Login">Log in</a> to leave a review.
                        </div>
                    }

                    <div class="reviews-list">
                        @if (recipe.Reviews.Any())
                        {
                            @foreach (var review in recipe.Reviews.OrderByDescending(r => r.CreatedAt))
                            {
                                <div class="review-card">
                                    <div class="review-header">
                                        <strong>@(review.User?.FirstName ?? "User")</strong>
                                        <span class="review-stars">
                                            @for (int k = 0; k < review.Rating; k++)
                                            {
                                                <span>★</span>
                                            }
                                        </span>
                                    </div>
                                    <p>@review.Comment</p>
                                    <small>@review.CreatedAt.ToShortDateString()</small>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="no-reviews">No reviews yet. Be the first!</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    private Recipe? recipe;
    private FlavourFlowUser? user;
    private bool isSaved = false;

    // Review State
    private bool userHasReviewed = false;
    private bool isSubmitting = false;
    private int newRating = 5;
    private string newComment = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        recipe = await RecipeService.GetRecipeByIdAsync(Id);
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();

        if (authState.User.Identity?.IsAuthenticated ?? false)
        {
            user = await UserManager.GetUserAsync(authState.User);
            if (user != null && recipe != null)
            {
                isSaved = await UserService.IsRecipeSavedAsync(user.Id, Id);
                // Check if user has already reviewed
                userHasReviewed = await RecipeService.HasUserReviewedAsync(Id, user.Id);
            }
        }
    }

    private async Task SubmitReview()
    {
        if (user != null && recipe != null && !string.IsNullOrWhiteSpace(newComment))
        {
            isSubmitting = true;
            await RecipeService.AddReviewAsync(recipe.RecipeId, user.Id, newRating, newComment);

            // Clear form
            newComment = "";
            newRating = 5;

            // Reload data to refresh review list and update userHasReviewed status
            await LoadData();
            isSubmitting = false;
        }
    }

    private async Task ToggleSave()
    {
        if (user == null) { Navigation.NavigateTo("Account/Login"); return; }
        await UserService.ToggleSaveRecipeAsync(user.Id, Id);
        isSaved = !isSaved;
    }

    private void GoBack() => Navigation.NavigateTo("/");
}

