@page "/login"

<div class="container-fluid d-flex align-items-center justify-content-center" style="min-height: 80vh; background-color: #f9f9f9;">

    <div class="col-md-4">
        <div class="card border-0 shadow-lg p-4" style="border-radius: 30px;">
            <div class="card-body text-center">

                <div class="mb-4">
                    <span class="fs-1">🍜</span> <h3 class="fw-bold mt-2" style="color: #333;">FlavorFlow</h3>
                </div>

                <h5 class="text-muted mb-4">Welcome back!</h5>

                <form>
                    <div class="mb-3">
                        <input type="email" class="form-control form-control-lg rounded-pill bg-light border-0 px-4" placeholder="Email Address" style="height: 55px;">
                    </div>

                    <div class="mb-3">
                        <input type="password" class="form-control form-control-lg rounded-pill bg-light border-0 px-4" placeholder="Password" style="height: 55px;">
                    </div>

                    <div class="text-end mb-4">
                        <a href="#" class="text-muted text-decoration-none small">Forgot Password?</a>
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-lg rounded-pill text-white fw-bold shadow-sm btn-flavor" type="submit" style="height: 55px;">
                            Log In
                        </button>
                    </div>
                </form>

                <div class="mt-4 text-muted small">
                    Don't have an account? <a href="signup" class="fw-bold text-decoration-none" style="color: #FF6B4A;">Sign Up</a>
                </div>
            </div>
        </div>
    </div>
</div>

