@page "/edit-recipe/{Id:int}"
@using FlavourFlow.Domains
@using FlavourFlow.Services
@using FlavourFlow.Data
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components.Authorization

@attribute [Authorize]
@rendermode RenderMode.InteractiveServer

@inject RecipeService RecipeService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@inject UserManager<FlavourFlowUser> UserManager

<PageTitle>Edit Recipe - FlavorFlow</PageTitle>

<div class="edit-container">
    <h1>✏️ Edit Recipe</h1>

    @if (recipe == null)
    {
        <p>Loading...</p>
    }
    else if (!isAllowed)
    {
        <div class="alert alert-danger">⛔ You do not have permission to edit this recipe.</div>
    }
    else
    {
        <EditForm Model="recipe" OnValidSubmit="HandleValidSubmit" FormName="editRecipeForm">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <label>Recipe Title</label>
                <InputText @bind-Value="recipe.Title" class="form-control" />
            </div>

            <div class="form-group">
                <label>Description</label>
                <InputTextArea @bind-Value="recipe.Description" class="form-control" rows="3" />
            </div>

            <div class="row">
                <div class="col">
                    <label>Cook Time (min)</label>
                    <InputNumber @bind-Value="recipe.CookTime" class="form-control" />
                </div>
                <div class="col">
                    <label>Difficulty</label>
                    <InputSelect @bind-Value="recipe.Difficulty" class="form-control">
                        <option value="Easy">Easy</option>
                        <option value="Medium">Medium</option>
                        <option value="Hard">Hard</option>
                    </InputSelect>
                </div>
            </div>

            <div class="form-group">
                <label>Image URL</label>
                <InputText @bind-Value="recipe.ImageURL" class="form-control" placeholder="https://..." />
            </div>

            @if (!string.IsNullOrEmpty(recipe.ImageURL))
            {
                <div class="img-preview" style="background-image: url('@recipe.ImageURL')"></div>
            }

            <div class="btn-row">
                <button type="button" class="btn-cancel" @onclick="Cancel">Cancel</button>
                <button type="submit" class="btn-save">💾 Save Changes</button>
            </div>
        </EditForm>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }

    [SupplyParameterFromForm]
    private Recipe? recipe { get; set; }

    private bool isAllowed = false;

    protected override async Task OnInitializedAsync()
    {
        // Only load from DB if it's the initial GET request (recipe is null)
        if (recipe == null)
        {
            var dbRecipe = await RecipeService.GetRecipeByIdAsync(Id);
            if (dbRecipe != null)
            {
                // Check Permissions
                var authState = await AuthStateProvider.GetAuthenticationStateAsync();
                var user = authState.User;
                var appUser = await UserManager.GetUserAsync(user);

                if (appUser != null)
                {
                    // Allow if Owner OR Admin
                    if (dbRecipe.UserId == appUser.Id || await UserManager.IsInRoleAsync(appUser, "Admin"))
                    {
                        recipe = dbRecipe;
                        isAllowed = true;
                    }
                }
            }
        }
    }

    private async Task HandleValidSubmit()
    {
        if (recipe != null && isAllowed)
        {
            await RecipeService.UpdateRecipeAsync(recipe);
            Navigation.NavigateTo($"recipe/{recipe.RecipeId}");
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo($"recipe/{Id}");
    }
}

