@page "/"
@using FlavourFlow.Services
@using FlavourFlow.Domains
@rendermode RenderMode.InteractiveServer
@inject RecipeService RecipeService
@inject NavigationManager Navigation

<PageTitle>Home - FlavourFlow</PageTitle>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger m-4">
        <strong>Error:</strong> @errorMessage
    </div>
}

<div class="hero-section">
    <h1>Find your next favorite meal</h1>
    <p class="subtitle">Search by name, ingredient, or tag (e.g. "Vegan")</p>

    <div class="search-container">
        <input type="text" class="search-input" placeholder="What are you craving?"
               @bind="searchText" @bind:event="oninput" @onkeyup="PerformSearch" />
        <button class="search-btn" @onclick="PerformSearch">🔍</button>
    </div>
</div>

<div class="container mt-5">
    @if (isLoading)
    {
        <div class="text-center"><p class="text-muted">Searching...</p></div>
    }
    else if (recipes == null || !recipes.Any())
    {
        <div class="empty-search">
            <span style="font-size: 3rem;">🥦</span>
            <h3>No recipes found.</h3>
            <button class="btn-clear" @onclick="ClearSearch">Show All Recipes</button>
        </div>
    }
    else
    {
        <div class="recipe-grid">
            @foreach (var recipe in recipes)
            {
                <div class="recipe-card" @onclick='() => Navigation.NavigateTo($"/recipe/{recipe.RecipeId}")'>
                    <div class="card-img" style="background-image: url('@(string.IsNullOrEmpty(recipe.ImageURL) ? "/images/default.jpg" : recipe.ImageURL)');"></div>
                    <div class="card-body">
                        <div class="card-header-row">
                            <span class="category-badge">@(recipe.Category?.Name ?? "Uncategorized")</span>
                            <span class="rating">⭐ @(recipe.AverageRating.ToString("0.0"))</span>
                        </div>

                        <h5>@recipe.Title</h5>

                        <div class="card-meta">
                            <span>⏱ @recipe.CookTime min</span>
                            <span>• @(recipe.Difficulty ?? "Medium")</span>
                        </div>

                        <div class="tags-row">
                            @if (!string.IsNullOrEmpty(recipe.Tags))
                            {
                                @foreach (var tag in recipe.Tags.Split(',').Take(3))
                                {
                                    <span class="tag-badge">@tag</span>
                                }
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Recipe> recipes = new();
    private string searchText = "";
    private bool isLoading = true;
    private string errorMessage = "";

    protected override async Task OnInitializedAsync()
    {
        await PerformSearch();
    }

    private async Task PerformSearch()
    {
        try
        {
            isLoading = true;
            errorMessage = "";
            recipes = await RecipeService.SearchRecipesAsync(searchText);

            // --- FIX: EXPLICIT CLIENT-SIDE SORTING ---
            // This guarantees the newest recipes appear first, even if the DB order is mixed
            recipes = recipes.OrderByDescending(r => r.DateCreated).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
            Console.WriteLine(ex.ToString());
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ClearSearch()
    {
        searchText = "";
        await PerformSearch();
    }
}

