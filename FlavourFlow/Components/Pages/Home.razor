@page "/"
@using Microsoft.AspNetCore.Components.Web
@using FlavourFlow.Services
@using FlavourFlow.Domains
@rendermode RenderMode.InteractiveServer

@inject NavigationManager Navigation
@inject RecipeService RecipeService

<PageTitle>FlavorFlow Explorer</PageTitle>

<div class="notification-banner @(string.IsNullOrEmpty(notificationMessage) ? "" : "show")">
    @notificationMessage
</div>

<div class="hero">
    <h1>What are you craving?</h1>
    <p>Find the perfect meal. Fast, fresh, and filtered for the night.</p>

    <div class="search-container">
        <div class="search-box">
            <span class="search-icon">🔍</span>
            <input type="text"
                   class="search-input"
                   @bind="searchTerm"
                   @bind:event="oninput"
                   @onkeyup="HandleSearchEnter"
                   placeholder="Search for ingredients (e.g., 'chicken', 'pasta')..." />
            <button class="search-btn" @onclick="PerformSearch">Go</button>
        </div>
    </div>
</div>

<div class="content">
    <div class="section-header">
        <h2>Browse by Cuisine</h2>
        <a href="#" class="view-all">View All</a>
    </div>

    <div class="cuisine-grid">
        <div class="cuisine-card italian" @onclick='() => NavigateToCuisine("Italian")'>
            <span class="cuisine-icon">🍝</span>
            <h3>Italian</h3>
            <span class="cuisine-tag">Comfort</span>
        </div>
        <div class="cuisine-card asian" @onclick='() => NavigateToCuisine("Asian")'>
            <span class="cuisine-icon">🥢</span>
            <h3>Asian</h3>
            <span class="cuisine-tag">Savory & Fast</span>
        </div>
        <div class="cuisine-card mexican" @onclick='() => NavigateToCuisine("Mexican")'>
            <span class="cuisine-icon">🌮</span>
            <h3>Mexican</h3>
            <span class="cuisine-tag">Spicy & Fresh</span>
        </div>
        <div class="cuisine-card american" @onclick='() => NavigateToCuisine("American")'>
            <span class="cuisine-icon">🍔</span>
            <h3>American</h3>
            <span class="cuisine-tag">Classic</span>
        </div>
    </div>

    <div class="filter-tabs">
        <button class="filter-tab @(activeFilter == "Everything" ? "active" : "")"
                @onclick='() => SetFilter("Everything")'>
            Everything
        </button>

        <button class="filter-tab @(activeFilter == "Under 30 Min" ? "active" : "")"
                @onclick='() => SetFilter("Under 30 Min")'>
            ⚡ Under 30 Min
        </button>

        <button class="filter-tab @(activeFilter == "Leisurely Cook" ? "active" : "")"
                @onclick='() => SetFilter("Leisurely Cook")'>
            🍳 Leisurely Cook
        </button>
    </div>

    <div class="recipe-grid">
        @if (recipes == null)
        {
            <p>Loading recipes...</p>
        }
        else if (recipes.Count == 0)
        {
            <p>No recipes found for this filter.</p>
        }
        else
        {
            @foreach (var recipe in recipes)
            {
                <div class="recipe-card" @onclick='() => Navigation.NavigateTo($"/recipe/{recipe.RecipeId}")'>
                    <div class="image-container">
                        <img src="@(string.IsNullOrEmpty(recipe.ImageURL) ? "https://images.unsplash.com/photo-1495521821757-a1efb6729352?auto=format&fit=crop&w=800&q=80" : recipe.ImageURL)"
                             alt="@recipe.Title"
                             class="recipe-img" />
                        <div class="recipe-time">@recipe.CookTime min</div>
                    </div>

                    <div class="recipe-info">
                        <div class="recipe-category">
                            <span>@recipe.Category?.Name?.ToUpper()</span>
                            <div class="recipe-rating">
                                <span>⭐</span> 4.8
                            </div>
                        </div>
                        <div class="recipe-title">@recipe.Title</div>
                        <div class="recipe-tags">
                            <span class="recipe-tag">@recipe.Difficulty</span>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@code {
    // --- THIS CODE BLOCK FIXES "recipes does not exist" ---
    private string notificationMessage = "";
    private string activeFilter = "Everything";
    private string searchTerm = "";
    private List<Recipe>? recipes;

    protected override async Task OnInitializedAsync()
    {
        await SetFilter("Everything");
    }

    private void NavigateToCuisine(string cuisine)
    {
        Navigation.NavigateTo($"/cuisine/{cuisine}");
    }

    private async Task ShowNotification(string message)
    {
        notificationMessage = message;
        StateHasChanged();
        await Task.Delay(3000);
        notificationMessage = "";
        StateHasChanged();
    }

    private async Task SetFilter(string filterName)
    {
        activeFilter = filterName;
        // This fetches real data from the database
        recipes = await RecipeService.GetRecipesByFilterAsync(filterName);
    }

    private async Task PerformSearch()
    {
        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            await ShowNotification($"Searching for: {searchTerm}");
        }
    }

    private async Task HandleSearchEnter(KeyboardEventArgs e)
    {
        if (e.Key == "Enter") await PerformSearch();
    }
}

