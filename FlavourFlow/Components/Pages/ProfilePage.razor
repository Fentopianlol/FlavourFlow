@page "/profile"
@page "/profile/{UserId}"
@using Microsoft.AspNetCore.Authorization
@using FlavourFlow.Domains
@using FlavourFlow.Services
@using FlavourFlow.Data
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components.Authorization

@inject AuthenticationStateProvider AuthStateProvider
@inject UserManager<FlavourFlowUser> UserManager
@inject RecipeService RecipeService
@inject UserService UserService

<PageTitle>@(profileUser?.FirstName ?? "Chef")'s Kitchen - FlavorFlow</PageTitle>

<div class="profile-container">
    @if (profileUser == null)
    {
        <div class="loading-state">
            <div class="spinner">🍊</div>
            <p>Setting up the kitchen...</p>
        </div>
    }
    else
    {
        <div class="profile-card">
            <div class="avatar-circle">
                @if (!string.IsNullOrEmpty(profileUser.FirstName))
                {
                    @profileUser.FirstName.Substring(0, 1).ToUpper()
                }
                else
                {
                    <span>?</span>
                }
            </div>

            <h1>
                @(isOwnProfile ? "My Kitchen" : $"{profileUser.FirstName}'s Kitchen")
            </h1>

            <p class="user-email">@profileUser.Email</p>

            <div class="stats-row">
                <div class="stat-item">
                    <span class="stat-num">@createdRecipes.Count</span>
                    <span class="stat-label">Recipes</span>
                </div>
                <div class="stat-divider"></div>
                <div class="stat-item">
                    <span class="stat-num">@reviewsCount</span>
                    <span class="stat-label">Reviews</span>
                </div>
            </div>

            @if (isOwnProfile)
            {
                <a href="Account/Manage" class="btn-edit">⚙️ Edit Profile</a>
            }
        </div>

        <div class="tabs-container">
            <button class="tab-btn @(activeTab == "created" ? "active" : "")" @onclick="@(() => activeTab = "created")">
                🍳 Recipes Created
            </button>

            @if (isOwnProfile)
            {
                <button class="tab-btn @(activeTab == "saved" ? "active" : "")" @onclick="@(() => activeTab = "saved")">
                    ❤️ Saved Recipes
                </button>
            }
        </div>

        <div class="content-area">
            @if (activeTab == "created")
            {
                if (createdRecipes.Any())
                {
                    <div class="recipe-grid">
                        @foreach (var r in createdRecipes)
                        {
                            <a href="recipe/@r.RecipeId" class="recipe-card">
                                <div class="card-img" style="background-image: url('@(string.IsNullOrEmpty(r.ImageURL) ? "/images/default.jpg" : r.ImageURL)')"></div>
                                <div class="card-info">
                                    <h4>@r.Title</h4>
                                    <div class="meta">
                                        <span class="stars">⭐ @r.AverageRating.ToString("0.0")</span>
                                        <span class="time">⏱ @r.CookTime min</span>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <span class="icon">👨‍🍳</span>
                        <p>No recipes cooked up yet!</p>
                        @if (isOwnProfile)
                        {
                            <a href="add-recipe" class="btn-action">Create Your First Recipe</a>
                        }
                    </div>
                }
            }
            else if (activeTab == "saved" && isOwnProfile)
            {
                if (savedRecipes.Any())
                {
                    <div class="recipe-grid">
                        @foreach (var r in savedRecipes)
                        {
                            <a href="recipe/@r.RecipeId" class="recipe-card">
                                <div class="card-img" style="background-image: url('@(string.IsNullOrEmpty(r.ImageURL) ? "/images/default.jpg" : r.ImageURL)')"></div>
                                <div class="card-info">
                                    <h4>@r.Title</h4>
                                    <div class="meta">
                                        <span class="stars">⭐ @r.AverageRating.ToString("0.0")</span>
                                        <span class="category">@r.Category?.Name</span>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <span class="icon">🔖</span>
                        <p>Your cookbook is empty.</p>
                        <a href="explore" class="btn-action">Find Recipes to Save</a>
                    </div>
                }
            }
        </div>
    }
</div>

@code {
    [Parameter] public string? UserId { get; set; }

    private FlavourFlowUser? profileUser;
    private bool isOwnProfile = false;
    private string activeTab = "created";

    private List<Recipe> createdRecipes = new();
    private List<Recipe> savedRecipes = new();
    private int reviewsCount = 0;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var loggedInUser = await UserManager.GetUserAsync(authState.User);

        if (string.IsNullOrEmpty(UserId))
        {
            if (loggedInUser != null)
            {
                profileUser = loggedInUser;
                isOwnProfile = true;
            }
        }
        else
        {
            profileUser = await UserManager.FindByIdAsync(UserId);
            if (loggedInUser != null && profileUser != null && loggedInUser.Id == profileUser.Id)
            {
                isOwnProfile = true;
            }
        }

        if (profileUser != null)
        {
            createdRecipes = await RecipeService.GetRecipesByCreatorAsync(profileUser.Id);
            var reviews = await RecipeService.GetReviewsByUserIdAsync(profileUser.Id);
            reviewsCount = reviews.Count;

            if (isOwnProfile)
            {
                savedRecipes = await UserService.GetSavedRecipesAsync(profileUser.Id);
            }
        }
    }
}

<style>
    /* Container restricts width to prevent "wonky" stretching */
    .profile-container {
        max-width: 900px;
        margin: 40px auto;
        padding: 0 20px;
        font-family: 'Segoe UI', sans-serif;
    }

    /* 1. Profile Header Card */
    .profile-card {
        background: white;
        border-radius: 20px;
        padding: 40px;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        border: 1px solid #f0f0f0;
        margin-bottom: 30px;
    }

    .avatar-circle {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #ff6b35, #ff9f43);
        color: white;
        font-size: 3rem;
        font-weight: 800;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        box-shadow: 0 5px 15px rgba(255, 107, 53, 0.3);
    }

    h1 {
        margin: 0;
        color: #2d3436;
        font-weight: 800;
        font-size: 2rem;
    }

    .user-email {
        color: #636e72;
        margin-top: 5px;
        font-size: 1rem;
    }

    /* Stats */
    .stats-row {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 30px;
        margin: 25px 0;
    }

    .stat-item {
        text-align: center;
    }

    .stat-num {
        display: block;
        font-size: 1.5rem;
        font-weight: 800;
        color: #2d3436;
    }

    .stat-label {
        font-size: 0.8rem;
        text-transform: uppercase;
        color: #b2bec3;
        letter-spacing: 1px;
        font-weight: 700;
    }

    .stat-divider {
        width: 1px;
        height: 40px;
        background: #eee;
    }

    .btn-edit {
        display: inline-block;
        padding: 8px 20px;
        background: #f1f2f6;
        color: #2d3436;
        border-radius: 20px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: background 0.2s;
    }

        .btn-edit:hover {
            background: #dfe4ea;
        }

    /* 2. Tabs */
    .tabs-container {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-bottom: 30px;
    }

    .tab-btn {
        background: white;
        border: 2px solid #eee;
        padding: 10px 25px;
        border-radius: 30px;
        font-size: 1rem;
        font-weight: 600;
        color: #636e72;
        cursor: pointer;
        transition: all 0.2s;
    }

        .tab-btn:hover {
            border-color: #ff6b35;
            color: #ff6b35;
        }

        .tab-btn.active {
            background: #ff6b35;
            color: white;
            border-color: #ff6b35;
            box-shadow: 0 4px 10px rgba(255, 107, 53, 0.2);
        }

    /* 3. Grid & Cards */
    .recipe-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 25px;
    }

    .recipe-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        text-decoration: none;
        color: inherit;
        border: 1px solid #f0f0f0;
        transition: transform 0.2s, box-shadow 0.2s;
        display: block;
    }

        .recipe-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.05);
        }

    .card-img {
        height: 160px;
        background-size: cover;
        background-position: center;
    }

    .card-info {
        padding: 15px;
    }

        .card-info h4 {
            margin: 0 0 10px;
            font-size: 1.1rem;
            font-weight: 700;
            color: #2d3436;
        }

    .meta {
        display: flex;
        justify-content: space-between;
        font-size: 0.9rem;
        color: #636e72;
    }

    .stars {
        color: #ffb400;
        font-weight: 600;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px;
        background: white;
        border-radius: 15px;
        border: 2px dashed #eee;
    }

        .empty-state .icon {
            font-size: 3rem;
            display: block;
            margin-bottom: 10px;
            opacity: 0.5;
        }

        .empty-state p {
            color: #b2bec3;
            font-size: 1.1rem;
            margin-bottom: 20px;
        }

    .btn-action {
        display: inline-block;
        padding: 10px 25px;
        background: #ff6b35;
        color: white;
        text-decoration: none;
        border-radius: 30px;
        font-weight: bold;
    }

    .loading-state {
        text-align: center;
        margin-top: 100px;
        color: #aaa;
    }

    .spinner {
        font-size: 2rem;
        animation: spin 2s infinite linear;
        display: inline-block;
        margin-bottom: 10px;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }
</style>