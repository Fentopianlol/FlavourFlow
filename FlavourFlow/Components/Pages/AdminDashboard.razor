@page "/admin/dashboard"
@using Microsoft.AspNetCore.Authorization
@using FlavourFlow.Domains
@using FlavourFlow.Services
@using FlavourFlow.Data
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize(Roles = "Admin")]
@rendermode RenderMode.InteractiveServer

@inject UserService UserService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Admin Dashboard - FlavourFlow</PageTitle>

<div class="admin-container">
    <h1>🛡️ Admin Dashboard</h1>
    <p>Manage users and system content.</p>

    <div class="stats-grid">
        <div class="stat-card">
            <h3>Total Users</h3>
            <div class="number">@users.Count</div>
        </div>
        <div class="stat-card">
            <h3>System Status</h3>
            <div class="number" style="color: #00b894;">Active</div>
        </div>
    </div>

    <h3 class="section-title">User Management</h3>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in users)
                {
                    <tr>
                        <td>
                            <div class="user-info">
                                <span class="avatar">👤</span>
                                <div>
                                    <strong>@user.FirstName @user.LastName</strong>
                                    <br />
                                    <small class="text-muted">
                                        ID: @(user.Id.Length > 8 ? user.Id.Substring(0, 8) + "..." : user.Id)
                                    </small>
                                </div>
                            </div>
                        </td>
                        <td>@user.Email</td>
                        <td>
                            @if (IsBanned(user))
                            {
                                <span class="badge badge-banned">🚫 Banned</span>
                            }
                            else
                            {
                                <span class="badge badge-active">✅ Active</span>
                            }
                        </td>
                        <td>
                            @if (user.Email != "admin@flavourflow.com")
                            {
                                <button class="btn-toggle @(IsBanned(user) ? "btn-unban" : "btn-ban")"
                                        @onclick="() => ToggleBan(user.Id)">
                                    @(IsBanned(user) ? "Unban User" : "Ban User")
                                </button>
                            }
                            else
                            {
                                <span class="text-muted">Super Admin</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private List<FlavourFlowUser> users = new();

    protected override async Task OnInitializedAsync()
    {
        users = await UserService.GetAllUsersAsync();
    }

    private bool IsBanned(FlavourFlowUser user)
    {
        return user.LockoutEnd.HasValue && user.LockoutEnd > DateTimeOffset.Now;
    }

    private async Task ToggleBan(string userId)
    {
        await UserService.ToggleUserBanAsync(userId);
        users = await UserService.GetAllUsersAsync();
    }
}

