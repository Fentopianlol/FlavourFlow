@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Web
@inject NavigationManager Navigation

<div class="nav-item px-3">
    <form action="Account/Logout" method="post">
        <AntiforgeryToken />
        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
        <button type="submit" class="nav-link" style="background: none; border: none; cursor: pointer; width: 100%; text-align: left; display: flex; align-items: center;">
            <span class="icon" style="margin-right: 12px; font-size: 1.2rem;">🚪</span>
            <span style="font-weight: 600; color: #666;">Logout</span>
        </button>
    </form>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = Navigation.Uri;
    }
}