@using Microsoft.AspNetCore.Components.Authorization

<div class="nav-container">
    <div class="brand-section">
        <a class="navbar-brand" href="">
            <span class="logo-icon">🍊</span>
            <span class="logo-text">FlavourFlow</span>
        </a>
    </div>

    <nav class="nav-links">

        <div class="nav-group">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="icon">🏠</span> <span class="text">Home</span>
            </NavLink>
            <NavLink class="nav-link" href="explore">
                <span class="icon">🔍</span> <span class="text">Explore</span>
            </NavLink>
        </div>

        <div class="nav-separator"></div>

        <AuthorizeView>
            <Authorized>
                <AuthorizeView Roles="Admin" Context="adminContext">
                    <div class="nav-group">
                        <span class="group-label">Admin Zone</span>
                        <NavLink class="nav-link" href="admin/dashboard">
                            <span class="icon">🛡️</span> <span class="text">Dashboard</span>
                        </NavLink>
                    </div>
                    <div class="nav-separator"></div>
                </AuthorizeView>

                <div class="nav-group">
                    <span class="group-label">Chef's Corner</span>
                    <NavLink class="nav-link" href="add-recipe">
                        <span class="icon">🍳</span> <span class="text">Share Recipe</span>
                    </NavLink>
                    <NavLink class="nav-link" href="profile">
                        <span class="icon">👨‍🍳</span> <span class="text">My Kitchen</span>
                    </NavLink>
                    <NavLink class="nav-link" href="Account/Manage">
                        <span class="icon">⚙️</span> <span class="text">Settings</span>
                    </NavLink>
                </div>

                <div class="nav-separator"></div>

                <div class="nav-group bottom-group">
                    <NavLink class="nav-link logout-link" href="logout">
                        <span class="icon">🚪</span> <span class="text">Log Out</span>
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-group">
                    <span class="group-label">Account</span>
                    <NavLink class="nav-link" href="Account/Login">
                        <span class="icon">🔐</span> <span class="text">Log In</span>
                    </NavLink>
                    <NavLink class="nav-link" href="Account/Register">
                        <span class="icon">✨</span> <span class="text">Join Us</span>
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>